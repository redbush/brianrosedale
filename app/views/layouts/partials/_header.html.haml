.navbar.navbar-default{role: 'navigation'}
  .container
    .navbar-header
      %button{type: 'button', class: 'navbar-toggle collapsed', data: {toggle: 'collapse', target: '#bs-navbar-collapse'}}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to '{"developer":"Brian Rosedale"}', home_path, class: 'navbar-brand hidden-xs hidden-sm'
      = link_to '{"dev":"Brian Rosedale"}', home_path, class: 'navbar-brand hidden-md hidden-lg'
      %p.navbar-text.hidden-xs.hidden-sm FULL-STACK DEVELOPER
    .collapse.navbar-collapse#bs-navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li{class: current_page?(posts_path) ? 'active' : 'inactive'}
          = link_to 'Blog', posts_path
        %li{class: current_page?(work_path) ? 'active' : 'inactive'}
          = link_to 'Work', work_path
        %li{class: current_page?(about_path) ? 'active' : 'inactive'}
          = link_to 'About', about_path
        - if admin_signed_in?
          %li
            = link_to 'Admin Dashboard', rails_admin.dashboard_path