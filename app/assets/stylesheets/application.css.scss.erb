// Common
$brand-primary: #2E8FEF;
$main-color: #ffffff;
$secondary-color: #133B63;
$font-size: 18px;
$font-size-sm: 16px;
$margin: 20px;
$margin-sm: 5px;
$padding: 20px;
$padding-lg: 60px;

// Components
$border-radius-base: 0px;
$border-radius-small: 0px;
$border-radius-large: 0px;
$navbar-default-toggle-hover-bg: $secondary-color;
$navbar-default-toggle-icon-bar-bg: $brand-primary;
$navbar-default-toggle-border-color: $brand-primary;

// Navbar
$navbar-height: 60px;
$navbar-margin-bottom: 0px;
$navbar-default-border: $main-color;
$navbar-default-bg: $main-color;
$navbar-default-link-color: $brand-primary;
$navbar-default-link-hover-color: $secondary-color;
$navbar-default-link-active-color: $secondary-color;
$navbar-default-link-active-bg: $main-color;

// Typography
$font-size-base: $font-size;

// Scaffolding
$body-bg: #2269AF;
$text-color: #777777;

@import "bootstrap-sprockets";
@import "bootstrap";
@import "pages";
@import "posts";

// Navbar

.nav .active {
  border-bottom: 2px solid $secondary-color;
}

// Typography Media Queries
@media (max-width: $screen-md-min) {
  body {
    font-size: $font-size-sm !important;
    h1, h2, h3, h4 {
      font-weight: bold;
      font-size: $font-size;
    }
    h5, h6 {
      font-size: $font-size-sm;
      font-weight: 500;
    }
  }
  .navbar-brand {
    font-size: $font-size !important;
  }
}

// Page Header
.page-header {
    margin-top: 0px;
}

h1, h2, h3, h4, h5, h6 {
  margin: $margin 0px $margin 0px;
}

#main-container {
  background: $main-color;
  padding: $padding-lg 0px $padding-lg 0px;
}

@media (max-width: $screen-md-min) {
  #main-container {
    padding: $padding 0px $padding 0px;
  }
}

#footer {
  border-top: 2px solid $secondary-color;
  color: $main-color;
  min-height: 120px;
  a {
    color: $main-color;
  }
  #footer-links {
    margin-bottom: $margin;
  }
}

@mixin add_image_before($image_name) {
  display: inline-block;
  margin-bottom: $margin-sm;
  &:before {
    content: url("#{$image_name}");
    display: inline-block;
    vertical-align: middle;
    padding-right: 5px;
  }
}

#email-link {
  @include add_image_before("<%= asset_path 'email.png' %>")
}

#github-link {
  @include add_image_before("<%= asset_path 'github.png' %>")
}

#linkedin-link {
  @include add_image_before("<%= asset_path 'linkedin.png' %>")
}